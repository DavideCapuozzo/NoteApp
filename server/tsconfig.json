{
  "compilerOptions": {
    /* Output */
    "outDir": "dist",                        /* Dove salvare i file compilati */
    "rootDir": ".",                          /* Cartella corrente come root */

    /* Target e modulo */
    "target": "ES2019",                      /* Versione JS compatibile con Node 18+ */
    "module": "CommonJS",                    /* CommonJS per compatibilità con Node */
    "moduleResolution": "node",              /* Risoluzione moduli classica */
    "esModuleInterop": true,                 /* Per import/export più flessibili */
    "allowSyntheticDefaultImports": true,    /* Migliore supporto per import */

    /* Sicurezza e controllo */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true                /* Per importare file JSON */
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
