# Database
MONGODB_URI=your_mongodb_connection_string

# JWT Secret (IMPORTANTE: usa un valore sicuro in produzione)
JWT_SECRET=your-very-secure-jwt-secret-key-at-least-32-characters

# Google OAuth Credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Session Secret (IMPORTANTE: usa un valore sicuro in produzione)
SESSION_SECRET=your-very-secure-session-secret-key

# Client URL (Frontend URL)
CLIENT_URL=https://your-frontend-domain.com

# Server Port
PORT=5000

# Environment (importante per cookie security)
NODE_ENV=production